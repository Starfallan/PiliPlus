{
    "name": "Flutter Android Dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17"
        }
    },
    "postCreateCommand": "bash .devcontainer/post-install.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.flutter"
            ]
        }
    },
    "remoteUser": "vscode"
}